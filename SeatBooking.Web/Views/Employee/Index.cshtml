@model int // The model is just the bookingId

<h2>Cancel Booking</h2>

<p>Are you sure you want to cancel this booking?</p>

<form asp-controller="Employee" asp-action="CancelBooking" method="post">
    <input type="hidden" name="bookingId" value="@Model" />
    <button type="submit" class="btn btn-danger">Yes, Cancel Booking</button>
    <a asp-action="Index" class="btn btn-secondary">No, Go Back</a>
</form>
